{
  "name": "cockpit",
  "version": "0.0.0",
  "private": true,
  "main": "dist/electron/main.js",
  "scripts": {
    "build": "vite build",
    "build:serve": "yarn build && yarn serve",
    "coverage": "vitest --coverage",
    "deploy:electron:dir": "electron-builder --dir",
    "deploy:electron": "electron-builder --publish=never",
    "dev": "vite",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore --max-warnings=0",
    "preview": "vite preview --port 5050",
    "serve": "vite preview",
    "test:ci": "yarn test:e2e:ci && vitest --coverage --run",
    "test:e2e:ci": "start-server-and-test preview http://127.0.0.1:5050/ 'cypress run'",
    "test:e2e": "start-server-and-test preview http://127.0.0.1:5050/ 'cypress open'",
    "test:unit": "vitest",
    "typecheck": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false"
  },
  "dependencies": {
    "@mdi/font": "5.9.55",
    "@vue-leaflet/vue-leaflet": "^0.6.1",
    "@vueuse/core": "^9.1.1",
    "browser-or-node": "^2.0.0",
    "gamepad.js": "^1.0.4",
    "gsap": "^3.11.3",
    "konva": "^8.3.13",
    "leaflet": "^1.8.0",
    "pinia": "^2.0.13",
    "roboto-fontface": "*",
    "uuid": "^8.3.2",
    "vue": "^3.2.33",
    "vue-konva": "^3.0.1",
    "vue-router": "^4.0.14",
    "vuetify": "3.0.0-beta.10",
    "webfontloader": "^1.0.0"
  },
  "devDependencies": {
    "@pinia/testing": "^0.0.12",
    "@rushstack/eslint-patch": "^1.1.0",
    "@types/jsdom": "^16.2.14",
    "@types/node": "^16.11.27",
    "@types/uuid": "^8.3.4",
    "@types/webfontloader": "^1.0.0",
    "@vitejs/plugin-vue": "3.1.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/test-utils": "^2.0.0-rc.20",
    "@vue/tsconfig": "^0.1.3",
    "c8": "^7.11.3",
    "cypress": "^9.5.4",
    "electron": "^20.1.0",
    "electron-builder": "^23.3.3",
    "eslint": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-jsdoc": "^39.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-vue": "^8.2.0",
    "jsdom": "^19.0.0",
    "prettier": "^2.5.1",
    "sass": "^1.38.0",
    "sass-loader": "^10.0.0",
    "start-server-and-test": "^1.14.0",
    "typescript": "~4.6.3",
    "vite": "3.1.0",
    "vite-plugin-electron": "^0.9.2",
    "vite-plugin-vuetify": "^1.0.0-alpha.16",
    "vitest": "^0.20.3",
    "vue-cli-plugin-vuetify": "~2.4.8",
    "vue-tsc": "^1.0.3",
    "vuetify-loader": "^2.0.0-alpha.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "quoteProps": "consistent"
  },
  "build": {
    "files": [
      "dist"
    ],
    "appId": "org.bluerobotics.cockpit",
    "mac": {
      "category": "public.app-category.entertainment"
    }
  }
}
